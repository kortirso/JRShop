- provide(:title, 'Category')
%body.category
	.container
		= render 'layouts/header'
		.row
			= render 'layouts/twolevel_menu'
		.row
			%h2= "#{@active.name}"
			- @products.each do |product|
				.col-xs-3
					.products_block
						- if product.image.blank?
							.empty_img
						- else
							= image_tag product.image.medium, class: 'img img-responsive'
						%p= link_to "#{product.name}", shop_product_path(product.link), class: 'link_black'
						%p= "#{product.price} руб."
						= button_to 'Купить', positions_path(product_id: product.id), class: 'btn btn-success', remote: true
		= render 'layouts/bottom'